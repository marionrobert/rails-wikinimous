<h1>Edit an article</h1>

<%= form_for(@article) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <%= f.submit %>
<% end %>
<br>
<br>

<%= link_to("Back to article", article_path(@article)) %>
<br>
<%= link_to "Back to all articles", articles_path %>
